{
    "linters": {
        "checkstyle": {
            "type": "checkstyle",
            "include": "(\\.java$)",
            "paths": [ "src/main/java" ],
            "aggregate": false
        },
        "findbugs": {
            "type": "findbugs-gradle",
            "include": "(\\.java$)"
        },
        "android": {
            "type": "AndroidLint",
            "gradle-modules": [ "volley-requests" ]
        }
    }
}
